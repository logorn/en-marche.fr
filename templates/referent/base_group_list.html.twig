{% extends 'referent/_layout.html.twig' %}

{% block javascripts %}
    <script type="text/javascript">
        Kernel.onLoad(function() {
            App.runManagedList(
                [
                    {
                        key: 'id',
                        name: 'ID',
                        style: {
                            width: 25
                        }
                    },
                    {
                        key: 'name',
                        name: 'Nom',
                        link: true
                    },
                    {
                        key: 'postalCode',
                        name: 'Code postal',
                        style: {
                            width: 100
                        }
                    },
                    {
                        key: 'members',
                        name: 'Suiveurs',
                        className: 'datagrid__table__col--hide-mobile',
                        style: {
                            width: 50
                        }
                    }
                ],
                {{ managedGroupsJson|raw }}
            );
        });
    </script>
{% endblock %}

{% block referent_content %}
    <h3>
        {{ title }}
    </h3>

    <hr />

    <div id="datagrid"></div>
{% endblock %}
